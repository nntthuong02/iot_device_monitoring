<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.MainActivity">

    <TextView
        android:id="@+id/tv_smart_gardens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_gardens"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/tv_smart_gardens"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_yard_24px"
        app:layout_constraintBottom_toBottomOf="@id/tv_smart_gardens"
        app:tint="@color/black"
        android:importantForAccessibility="no" />

    <ImageView
        android:id="@+id/imageView_garden"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/img_garden3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_smart_gardens"
        android:importantForAccessibility="no" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_device_thermostat_24px"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_garden"
        app:layout_constraintWidth_percent="0.2"
        android:background="@drawable/circle_border"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_25_c"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_medium"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"

        android:layout_marginEnd="50dp"
        android:src="@drawable/ic_water_drop_24px"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintWidth_percent="0.2"
        android:background="@drawable/circle_border"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_80"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_medium"
        app:layout_constraintEnd_toEndOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />

    <ImageView
        android:id="@+id/img_soil_moisture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        android:src="@drawable/ic_dat"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintWidth_percent="0.2"
        app:tint="@color/black"
        android:background="@drawable/circle_border"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textView_soil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_80"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_medium"
        app:layout_constraintEnd_toEndOf="@id/img_soil_moisture"
        app:layout_constraintStart_toStartOf="@id/img_soil_moisture"
        app:layout_constraintTop_toBottomOf="@id/img_soil_moisture" />

    <ImageView
        android:id="@+id/img_light1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_light_off"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@id/textView"
        app:layout_constraintStart_toStartOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintWidth_percent="0.2"
        app:tint="@color/black"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_medium"
        android:text="@string/tv_den"
        app:layout_constraintEnd_toEndOf="@id/textView2"
        app:layout_constraintStart_toStartOf="@id/textView2"
        app:layout_constraintTop_toTopOf="@id/img_light1" />


    <ImageView
        android:id="@+id/switch_den1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_switch_off"
        app:layout_constraintDimensionRatio="114:84"
        app:layout_constraintEnd_toEndOf="@id/textView2"
        app:layout_constraintStart_toStartOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintWidth_percent="0.2"
        android:importantForAccessibility="no" />

</androidx.constraintlayout.widget.ConstraintLayout>
